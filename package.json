{
	"name": "vscode-pandoc",
	"description": "Renders markdown through pandoc",
	"version": "0.0.8",
	"publisher": "DougFinke",
	"icon": "images/logo.png",
	"license": "SEE LICENSE",
	"bugs": {
		"url": "https://github.com/dfinke/vscode-pandoc/issues",
		"email": "finked@hotmail.com"
	},
	"homepage": "https://github.com/dfinke/vscode-pandoc/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/dfinke/vscode-pandoc.git"
	},
	"engines": {
		"vscode": "^1.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Pandoc Option Configuration",
			"properties": {
				"pandoc.docxOptString": {
					"type": "string",
					"default": "",
					"description": "pandoc .docx output option template"
				},
				"pandoc.htmlOptString": {
					"type": "string",
					"default": "",
					"description": "pandoc .html output option template"
				},
				"pandoc.mediawikiOptString": {
					"type": "string",
					"default": "-s -t mediawiki",
					"description": "pandoc .mediawiki output option template"
				},
				"pandoc.odtOptString": {
					"type": "string",
					"default": "-t odt",
					"description": "pandoc .odt output option template"
				},
				"pandoc.pdfOptString": {
					"type": "string",
					"default": "",
					"description": "pandoc .pdf output option template"
				},
				"pandoc.textileOptString": {
					"type": "string",
					"default": "-s -t textile",
					"description": "pandoc .textile output option template"
				}
			}
		},
		"keybindings": [
			{
				"command": "pandoc.render",
				"key": "ctrl+K P",
				"mac": "cmd+K P",
				"when": "editorTextFocus && editorLangId == 'markdown'"
			}
		],
		"commands": [
			{
				"command": "pandoc.render",
				"title": "Pandoc Render"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"typescript": "^1.8.5",
		"vscode": "^0.11.0"
	}
}